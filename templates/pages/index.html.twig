{% extends 'main.html.twig' %}

{% block body %}

    {#if is flash message#}
    {% include('components/flash-messages.html.twig') %}
    {#if is flash message#}

    <div class="container">

        <form action="/search" method="get" id="translateForm" autocomplete="off">
            <div class="row">

                <div class="col">
                    <label for="inputWord">Word id</label>
                    <input id="inputWord" name="q" type="text" class="form-control" placeholder="Type your word...">
                </div>

                <div class="col-md-2">
                    <label for="translateLang">Language</label>
                    {#<select id="translateLang" class="form-control" name="lang">#}
                        {#<option value="en-us" selected >En</option>#}
                    {#</select>#}
                    <input class="form-control" type="text" placeholder="En" readonly data-toggle="tooltip" data-placement="bottom" title="We can use only English language)">
                </div>

                <div class="col-2">
                    <button type="submit" class="btn btn-translate">Search</button>
                </div>

            </div>
        </form>
    </div>



    <div class="tagcloud-bl">
        {% include('components/tag-cloud.html.twig') %}
    </div>



{% endblock %}
